<% content_for :title, t('home.title', default: 'Welcome') %>

<div class="calm-home" data-controller="home">
  <!-- Hero Section -->
  <section class="calm-hero">
    <div class="calm-hero-background">
      <div class="calm-hero-pattern"></div>
      <div class="calm-hero-gradient"></div>
    </div>
    
    <div class="calm-container calm-hero-content">
      <!-- Welcome Badge -->
      <div class="calm-hero-badge animate-fade-in">
        <span class="calm-badge-icon">‚ú®</span>
        <%= t('home.hero.badge', default: 'Enterprise Ready') %>
      </div>
      
      <!-- Hero Title -->
      <h1 class="calm-hero-title animate-fade-in">
        <span class="calm-hero-pretitle"><%= t('home.hero.welcome', default: 'Welcome to') %></span>
        <span class="calm-hero-maintitle gradient-text">User Service</span>
        <span class="calm-hero-subtitle"><%= t('home.hero.subtitle', default: 'Your peaceful digital experience') %></span>
      </h1>
      
      <!-- Hero Description -->
      <p class="calm-hero-description animate-fade-in">
        <%= t('home.hero.description', default: 'Experience secure authentication, multi-language support, and a modern interface designed for tranquility and productivity.') %>
      </p>
      
      <!-- Hero Actions -->
      <div class="calm-hero-actions animate-fade-in">
        <% if user_signed_in? %>
          <%= link_to dashboard_path, class: "calm-btn calm-btn-primary calm-btn-lg" do %>
            <span class="calm-btn-icon">üè†</span>
            <%= t('home.hero.dashboard', default: 'Go to Dashboard') %>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class: "calm-btn calm-btn-primary calm-btn-lg" do %>
            <span class="calm-btn-icon">üîë</span>
            <%= t('common.login') %>
          <% end %>
          
          <%= link_to new_user_registration_path, class: "calm-btn calm-btn-secondary calm-btn-lg" do %>
            <span class="calm-btn-icon">‚ú®</span>
            <%= t('common.register') %>
          <% end %>
        <% end %>
      </div>
      
      <!-- Trust Indicators -->
      <div class="calm-trust-indicators animate-fade-in">
        <div class="calm-trust-item">
          <span class="calm-trust-icon">‚úì</span>
          <span><%= t('home.hero.uptime', default: '99.9% Uptime') %></span>
        </div>
        <div class="calm-trust-item">
          <span class="calm-trust-icon">üîí</span>
          <span><%= t('home.hero.security', default: 'Enterprise Security') %></span>
        </div>
        <div class="calm-trust-item">
          <span class="calm-trust-icon">üåç</span>
          <span><%= t('home.hero.support', default: '24/7 Support') %></span>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="calm-features-section">
    <div class="calm-container">
      <div class="calm-section-header">
        <div class="calm-section-badge">
          <span class="calm-badge-icon">‚≠ê</span>
          <%= t('home.features.badge', default: 'Core Features') %>
        </div>
        <h2 class="calm-section-title">
          <%= t('home.features.title', default: 'Everything you need for peace of mind') %>
        </h2>
        <p class="calm-section-description">
          <%= t('home.features.description', default: 'Built with care to provide a seamless and secure experience') %>
        </p>
      </div>
      
      <div class="calm-features-grid">
        <!-- Feature 1: Secure Authentication -->
        <turbo-frame id="feature-auth" class="calm-feature-card animate-fade-in">
          <div class="calm-feature-icon calm-icon-primary">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0110 0v4"></path>
            </svg>
          </div>
          <h3 class="calm-feature-title">
            <%= t('home.features.auth.title', default: 'Secure Authentication') %>
          </h3>
          <p class="calm-feature-description">
            <%= t('home.features.auth.description', default: 'Email and phone-based authentication with OTP verification for maximum security') %>
          </p>
        </turbo-frame>
        
        <!-- Feature 2: Multi-Language -->
        <turbo-frame id="feature-language" class="calm-feature-card animate-fade-in">
          <div class="calm-feature-icon calm-icon-success">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
            </svg>
          </div>
          <h3 class="calm-feature-title">
            <%= t('home.features.language.title', default: 'Multi-Language Support') %>
          </h3>
          <p class="calm-feature-description">
            <%= t('home.features.language.description', default: 'Seamless support for multiple languages including English, Hindi, Telugu, and more') %>
          </p>
        </turbo-frame>
        
        <!-- Feature 3: Modern UI -->
        <turbo-frame id="feature-ui" class="calm-feature-card animate-fade-in">
          <div class="calm-feature-icon calm-icon-info">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="3"></circle>
              <path d="M12 1v6m0 6v6m11-11h-6m-6 0H1m20.5-6.5L17 7m-10 10L2.5 21.5m19-19L17 17m-10-10L2.5 2.5"></path>
            </svg>
          </div>
          <h3 class="calm-feature-title">
            <%= t('home.features.ui.title', default: 'Peaceful Interface') %>
          </h3>
          <p class="calm-feature-description">
            <%= t('home.features.ui.description', default: 'Thoughtfully designed with Hotwire for a calm and responsive experience') %>
          </p>
        </turbo-frame>
        
        <!-- Feature 4: API Ready -->
        <turbo-frame id="feature-api" class="calm-feature-card animate-fade-in">
          <div class="calm-feature-icon calm-icon-warning">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 16V8a2 2 0 00-1-1.73l-7-4a2 2 0 00-2 0l-7 4A2 2 0 003 8v8a2 2 0 001 1.73l7 4a2 2 0 002 0l7-4A2 2 0 0021 16z"></path>
              <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
              <line x1="12" y1="22.08" x2="12" y2="12"></line>
            </svg>
          </div>
          <h3 class="calm-feature-title">
            <%= t('home.features.api.title', default: 'API Ready') %>
          </h3>
          <p class="calm-feature-description">
            <%= t('home.features.api.description', default: 'RESTful API endpoints for seamless integration with your ecosystem') %>
          </p>
        </turbo-frame>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="calm-cta-section">
    <div class="calm-container">
      <div class="calm-cta-card">
        <h2 class="calm-cta-title">
          <%= t('home.cta.title', default: 'Ready to experience tranquility?') %>
        </h2>
        <p class="calm-cta-description">
          <%= t('home.cta.description', default: 'Join thousands who have found their peaceful digital space') %>
        </p>
        <div class="calm-cta-actions">
          <% if user_signed_in? %>
            <%= link_to dashboard_path, class: "calm-btn calm-btn-primary calm-btn-lg" do %>
              <%= t('home.cta.explore', default: 'Explore Dashboard') %>
            <% end %>
          <% else %>
            <%= link_to new_user_registration_path, class: "calm-btn calm-btn-primary calm-btn-lg" do %>
              <%= t('home.cta.get_started', default: 'Get Started Free') %>
            <% end %>
            <span class="calm-cta-separator">or</span>
            <%= link_to new_user_session_path, class: "calm-link calm-link-primary" do %>
              <%= t('home.cta.sign_in', default: 'Sign in to existing account') %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>

<style>
  /* Homepage specific styles */
  .calm-home {
    min-height: 100vh;
  }
  
  /* Hero Section */
  .calm-hero {
    position: relative;
    padding: 6rem 0;
    overflow: hidden;
  }
  
  .calm-hero-background {
    position: absolute;
    inset: 0;
    z-index: -1;
  }
  
  .calm-hero-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--calm-primary-light) 0%, var(--calm-secondary-light) 100%);
    opacity: 0.1;
  }
  
  .calm-hero-pattern {
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at 20% 20%, rgba(91, 143, 185, 0.05) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(134, 167, 137, 0.05) 0%, transparent 50%);
    background-size: 500px 500px;
  }
  
  .calm-hero-content {
    position: relative;
    text-align: center;
    max-width: 800px;
  }
  
  .calm-hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: white;
    border: 1px solid var(--calm-gray-200);
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--calm-gray-700);
    margin-bottom: 2rem;
    box-shadow: var(--calm-shadow-sm);
  }
  
  .calm-badge-icon {
    font-size: 1.125rem;
  }
  
  .calm-hero-title {
    margin-bottom: 2rem;
  }
  
  .calm-hero-pretitle {
    display: block;
    font-size: 1.25rem;
    color: var(--calm-gray-600);
    font-weight: 400;
    margin-bottom: 0.5rem;
  }
  
  .calm-hero-maintitle {
    display: block;
    font-family: var(--calm-font-serif);
    font-size: 4rem;
    font-weight: 400;
    line-height: 1.1;
    margin-bottom: 1rem;
  }
  
  .calm-hero-subtitle {
    display: block;
    font-size: 1.5rem;
    color: var(--calm-gray-600);
    font-weight: 300;
  }
  
  .calm-hero-description {
    font-size: 1.125rem;
    color: var(--calm-gray-600);
    max-width: 600px;
    margin: 0 auto 3rem;
    line-height: 1.7;
  }
  
  .calm-hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }
  
  .calm-btn-icon {
    margin-right: 0.5rem;
    font-size: 1.25rem;
  }
  
  .calm-trust-indicators {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .calm-trust-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--calm-gray-600);
  }
  
  .calm-trust-icon {
    color: var(--calm-success);
    font-weight: bold;
  }
  
  /* Features Section */
  .calm-features-section {
    padding: 4rem 0;
    background: var(--calm-gray-50);
  }
  
  .calm-section-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .calm-section-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: white;
    border: 1px solid var(--calm-gray-200);
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--calm-gray-700);
    margin-bottom: 1.5rem;
  }
  
  .calm-section-title {
    font-family: var(--calm-font-serif);
    font-size: 2.5rem;
    color: var(--calm-gray-900);
    margin-bottom: 1rem;
  }
  
  .calm-section-description {
    font-size: 1.125rem;
    color: var(--calm-gray-600);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .calm-features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }
  
  .calm-feature-card {
    background: white;
    padding: 2rem;
    border-radius: 1rem;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid var(--calm-gray-200);
  }
  
  .calm-feature-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--calm-shadow-lg);
    border-color: var(--calm-primary-light);
  }
  
  .calm-feature-icon {
    width: 4rem;
    height: 4rem;
    margin: 0 auto 1.5rem;
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .calm-icon-primary {
    background: rgba(91, 143, 185, 0.1);
    color: var(--calm-primary);
  }
  
  .calm-icon-success {
    background: rgba(92, 184, 92, 0.1);
    color: var(--calm-success);
  }
  
  .calm-icon-info {
    background: rgba(91, 192, 222, 0.1);
    color: var(--calm-info);
  }
  
  .calm-icon-warning {
    background: rgba(240, 173, 78, 0.1);
    color: var(--calm-warning);
  }
  
  .calm-feature-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--calm-gray-900);
    margin-bottom: 0.75rem;
  }
  
  .calm-feature-description {
    color: var(--calm-gray-600);
    line-height: 1.6;
  }
  
  /* CTA Section */
  .calm-cta-section {
    padding: 4rem 0;
  }
  
  .calm-cta-card {
    background: var(--calm-gradient-primary);
    color: white;
    padding: 3rem;
    border-radius: 1rem;
    text-align: center;
    box-shadow: var(--calm-shadow-xl);
  }
  
  .calm-cta-title {
    font-family: var(--calm-font-serif);
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .calm-cta-description {
    font-size: 1.125rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }
  
  .calm-cta-actions {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .calm-cta-separator {
    color: rgba(255, 255, 255, 0.7);
    font-style: italic;
  }
  
  .calm-cta-card .calm-link {
    color: white;
    text-decoration: underline;
  }
  
  .calm-cta-card .calm-link:hover {
    text-decoration: none;
  }
  
  /* Mobile responsive */
  @media (max-width: 768px) {
    .calm-hero {
      padding: 4rem 0;
    }
    
    .calm-hero-maintitle {
      font-size: 3rem;
    }
    
    .calm-hero-subtitle {
      font-size: 1.25rem;
    }
    
    .calm-hero-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .calm-hero-actions .calm-btn {
      width: 100%;
      max-width: 300px;
    }
    
    .calm-section-title {
      font-size: 2rem;
    }
    
    .calm-features-grid {
      grid-template-columns: 1fr;
    }
    
    .calm-cta-card {
      padding: 2rem;
    }
    
    .calm-cta-title {
      font-size: 1.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .calm-hero-maintitle {
      font-size: 2.5rem;
    }
    
    .calm-trust-indicators {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>