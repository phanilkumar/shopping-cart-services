<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 py-2 px-4 sm:px-6 lg:px-8">
  <div class="max-w-sm w-full">
    <div>
      <div class="mx-auto h-12 w-12 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full flex items-center justify-center shadow-lg mb-4">
        <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
      </div>
      <h2 class="mt-2 text-center text-xl font-bold text-gray-900">
        Welcome Back
      </h2>
      <p class="mt-1 text-center text-sm text-gray-600">
        Sign in with email or phone number
      </p>
      <p class="mt-1 text-center text-xs text-gray-500">
        Or
        <%= link_to "create a new account", new_user_registration_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
      </p>
    </div>
    
    <div class="bg-white rounded-xl shadow-lg p-6 mt-6" data-controller="unified-login">
      <!-- Tab Navigation -->
      <div class="flex bg-gray-100 rounded-lg p-1 mb-6">
        <button data-action="click->unified-login#switchToEmail" 
                data-unified-login-target="emailTab"
                class="flex-1 py-2 px-3 rounded-md text-sm font-medium transition-all duration-200 bg-white text-blue-600 shadow-sm flex items-center justify-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
          </svg>
          Email
        </button>
        <button data-action="click->unified-login#switchToPhone" 
                data-unified-login-target="phoneTab"
                class="flex-1 py-2 px-3 rounded-md text-sm font-medium transition-all duration-200 text-gray-600 hover:text-gray-900 flex items-center justify-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Phone OTP
        </button>
      </div>

      <!-- Email Password Login Form -->
      <div data-unified-login-target="emailLogin" class="space-y-4">
        <!-- Email Login Message -->
        <div data-unified-login-target="emailError" class="hidden p-3 bg-red-50 border border-red-200 rounded-lg">
          <div class="flex items-center space-x-2">
            <svg data-unified-login-target="emailErrorIcon" class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <svg data-unified-login-target="emailSuccessIcon" class="hidden w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span data-unified-login-target="emailErrorMessage" class="text-sm text-red-600 font-medium"></span>
          </div>
        </div>
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
          
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email, 
                             autocomplete: "email", 
                             placeholder: "Enter your email address", 
                             class: "block w-full px-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition-all duration-200" %>
          </div>
          
          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.password_field :password, 
                                autocomplete: "current-password", 
                                placeholder: "Enter your password", 
                                class: "block w-full px-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition-all duration-200" %>
          </div>

          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
            </div>
            <div class="text-sm">
              <%= link_to "Forgot password?", new_user_password_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
            </div>
          </div>

          <%= f.submit "Sign In", class: "w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white py-3 px-4 rounded-lg font-medium hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98]" %>
        <% end %>
      </div>

      <!-- Phone OTP Login Form -->
      <div data-unified-login-target="phoneLogin" class="space-y-4 hidden">
        <!-- Phone Login Message -->
        <div data-unified-login-target="phoneError" class="hidden p-3 bg-red-50 border border-red-200 rounded-lg">
          <div class="flex items-center space-x-2">
            <svg data-unified-login-target="phoneErrorIcon" class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <svg data-unified-login-target="phoneSuccessIcon" class="hidden w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span data-unified-login-target="phoneErrorMessage" class="text-sm text-red-600 font-medium"></span>
          </div>
        </div>
        
        <!-- Step 1: Phone Number Input -->
        <div data-unified-login-target="phoneStep" class="space-y-4">
          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
              Phone Number
            </label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="text-gray-500 text-sm font-medium">+91</span>
              </div>
              <input type="tel" 
                     id="phone" 
                     data-unified-login-target="phoneInput"
                     maxlength="10" 
                     class="block w-full pl-12 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition-all duration-200"
                     placeholder="Enter 10-digit number">
            </div>
            <p class="mt-1 text-xs text-gray-500">Enter your 10-digit mobile number</p>
          </div>
          
          <button data-action="click->unified-login#sendOtp" 
                  data-unified-login-target="sendOtpBtn"
                  class="w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white py-3 px-4 rounded-lg font-medium hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98]">
            Send OTP
          </button>
        </div>

        <!-- Step 2: OTP Input -->
        <div data-unified-login-target="otpStep" class="space-y-4 hidden">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-3 text-center">
              Enter 6-digit OTP
            </label>
            <div class="flex space-x-2 justify-center mb-4">
              <!-- First block (2 digits) -->
              <input type="text" 
                     data-unified-login-target="otp1" 
                     maxlength="1" 
                     class="w-10 h-12 text-center border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg font-semibold otp-input"
                     data-action="input->unified-login#handleOtpInput keydown->unified-login#handleOtpKeydown">
              <input type="text" 
                     data-unified-login-target="otp2" 
                     maxlength="1" 
                     class="w-10 h-12 text-center border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg font-semibold otp-input"
                     data-action="input->unified-login#handleOtpInput keydown->unified-login#handleOtpKeydown">
              
              <span class="flex items-center text-gray-400 font-bold">-</span>
              
              <!-- Second block (2 digits) -->
              <input type="text" 
                     data-unified-login-target="otp3" 
                     maxlength="1" 
                     class="w-10 h-12 text-center border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg font-semibold otp-input"
                     data-action="input->unified-login#handleOtpInput keydown->unified-login#handleOtpKeydown">
              <input type="text" 
                     data-unified-login-target="otp4" 
                     maxlength="1" 
                     class="w-10 h-12 text-center border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg font-semibold otp-input"
                     data-action="input->unified-login#handleOtpInput keydown->unified-login#handleOtpKeydown">
              
              <span class="flex items-center text-gray-400 font-bold">-</span>
              
              <!-- Third block (2 digits) -->
              <input type="text" 
                     data-unified-login-target="otp5" 
                     maxlength="1" 
                     class="w-10 h-12 text-center border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg font-semibold otp-input"
                     data-action="input->unified-login#handleOtpInput keydown->unified-login#handleOtpKeydown">
              <input type="text" 
                     data-unified-login-target="otp6" 
                     maxlength="1" 
                     class="w-10 h-12 text-center border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg font-semibold otp-input"
                     data-action="input->unified-login#handleOtpInput keydown->unified-login#handleOtpKeydown">
            </div>
          </div>
          
          <button data-action="click->unified-login#verifyOtp" 
                  data-unified-login-target="verifyOtpBtn"
                  class="w-full bg-gradient-to-r from-green-600 to-emerald-600 text-white py-3 px-4 rounded-lg font-medium hover:from-green-700 hover:to-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none">
            <span data-unified-login-target="verifyText">Verify & Login</span>
            <span data-unified-login-target="verifyDisabledText" class="hidden">Too Many Failed Attempts</span>
          </button>
          
          <button data-action="click->unified-login#resendOtp" 
                  data-unified-login-target="resendOtpBtn"
                  class="w-full text-blue-600 py-2 px-4 rounded-lg font-medium hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200">
            <span data-unified-login-target="resendText">Resend OTP</span>
            <span data-unified-login-target="resendTimer" class="hidden">
              Resend in <span data-unified-login-target="timerCountdown">60</span>s
            </span>
          </button>
          
          <button data-action="click->unified-login#backToPhone" 
                  class="w-full text-gray-600 py-2 px-4 rounded-lg font-medium hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200 flex items-center justify-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Phone Number
          </button>
        </div>
      </div>
      
      <!-- Loading Overlay -->
      <div data-unified-login-target="loadingOverlay" 
           class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
        <div class="bg-white rounded-lg p-6 flex items-center space-x-3 shadow-xl">
          <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-blue-600"></div>
          <span class="text-gray-700 font-medium">Processing...</span>
        </div>
      </div>

      <!-- Toast Messages -->
      <div data-unified-login-target="toastContainer" 
           class="fixed top-4 right-4 z-50 space-y-2"></div>
    </div>
    
    <div class="text-center mt-6">
      <p class="text-xs text-gray-600">
        By signing in, you agree to our
        <%= link_to "Terms of Service", terms_path, class: "text-blue-600 hover:text-blue-500" %>
        and
        <%= link_to "Privacy Policy", privacy_path, class: "text-blue-600 hover:text-blue-500" %>
      </p>
    </div>
  </div>
</div>
