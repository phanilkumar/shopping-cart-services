<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <div class="mx-auto h-16 w-16 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-2xl flex items-center justify-center shadow-xl mb-6">
        <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
      </div>
      <h2 class="text-3xl font-bold text-gray-900 mb-2">
        <%= t('auth.login_title') %>
      </h2>
      <p class="text-gray-600">
        <%= t('auth.sign_in_with_email_or_phone') %>
      </p>
    </div>

    <!-- Main Form Container -->
    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8" data-controller="unified-login">
      <!-- Tab Navigation -->
      <div class="flex bg-gray-50 rounded-xl p-1 mb-8">
        <button data-action="click->unified-login#switchToEmail" 
                data-unified-login-target="emailTab"
                class="flex-1 py-3 px-4 rounded-lg text-sm font-semibold transition-all duration-200 bg-white text-blue-600 shadow-sm flex items-center justify-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
          </svg>
          <%= t('common.email') %>
        </button>
        <button data-action="click->unified-login#switchToPhone" 
                data-unified-login-target="phoneTab"
                class="flex-1 py-3 px-4 rounded-lg text-sm font-semibold transition-all duration-200 text-gray-600 hover:text-gray-900 flex items-center justify-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <%= t('auth.phone_otp') %>
        </button>
      </div>

      <!-- Email Password Login Form -->
      <div data-unified-login-target="emailLogin" class="space-y-6">
        <!-- Email Login Message -->
        <div data-unified-login-target="emailError" class="hidden p-4 bg-red-50 border border-red-200 rounded-xl">
          <div class="flex items-center space-x-3">
            <svg data-unified-login-target="emailErrorIcon" class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <svg data-unified-login-target="emailSuccessIcon" class="hidden w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span data-unified-login-target="emailErrorMessage" class="text-sm text-red-600 font-medium"></span>
          </div>
        </div>
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          
          <div>
            <%= f.label :email, t('auth.email'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= f.email_field :email, 
                             autocomplete: "email", 
                             placeholder: t('auth.enter_email_placeholder'), 
                             class: "block w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition-all duration-200 bg-gray-50 focus:bg-white" %>
          </div>
          
          <div>
            <%= f.label :password, t('auth.password'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
            <%= f.password_field :password, 
                                autocomplete: "current-password", 
                                placeholder: t('auth.enter_password_placeholder'), 
                                class: "block w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition-all duration-200 bg-gray-50 focus:bg-white" %>
          </div>

          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <%= f.label :remember_me, t('auth.remember_me'), class: "ml-2 block text-sm text-gray-900" %>
            </div>
            <div class="text-sm">
              <%= link_to t('auth.forgot_password'), new_user_password_path, class: "font-medium text-blue-600 hover:text-blue-500 transition-colors duration-200" %>
            </div>
          </div>

          <%= f.submit t('auth.sign_in'), class: "w-full bg-gradient-to-r from-blue-600 to-indigo-600 text-white py-3 px-4 rounded-xl font-semibold hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] shadow-lg" %>
        <% end %>
      </div>

      <!-- Phone OTP Login Form -->
      <div data-unified-login-target="phoneLogin" class="space-y-6 hidden">
        <!-- Phone Login Message -->
        <div data-unified-login-target="phoneError" class="hidden p-4 bg-red-50 border border-red-200 rounded-xl">
          <div class="flex items-center space-x-3">
            <svg data-unified-login-target="phoneErrorIcon" class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <svg data-unified-login-target="phoneSuccessIcon" class="hidden w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span data-unified-login-target="phoneErrorMessage" class="text-sm text-red-600 font-medium"></span>
          </div>
        </div>

        <!-- Phone Step -->
        <div data-unified-login-target="phoneStep" class="space-y-6">
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              <%= t('auth.phone_number') %>
            </label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <span class="text-gray-500 text-sm font-medium">+91</span>
              </div>
              <input type="tel" 
                     data-unified-login-target="phoneInput"
                     placeholder="<%= t('auth.enter_phone_placeholder') %>"
                     class="block w-full pl-12 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition-all duration-200 bg-gray-50 focus:bg-white"
                     maxlength="10"
                     pattern="[0-9]*"
                     inputmode="numeric">
            </div>
          </div>
          
          <button data-action="click->unified-login#sendOtp"
                  data-unified-login-target="sendOtpBtn"
                  class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 text-white py-3 px-4 rounded-xl font-semibold hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] shadow-lg">
            <%= t('auth.send_otp') %>
          </button>
        </div>

        <!-- OTP Step -->
        <div data-unified-login-target="otpStep" class="space-y-6 hidden">
          <div class="text-center">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              <%= t('auth.enter_otp') %>
            </h3>
            <p class="text-sm text-gray-600">
              <%= t('auth.otp_sent_to') %> <span data-unified-login-target="phoneDisplay" class="font-medium"></span>
            </p>
          </div>
          
          <div class="flex justify-center space-x-2">
            <input type="text" data-unified-login-target="otp1" class="w-12 h-12 text-center border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg font-semibold" maxlength="1" inputmode="numeric">
            <input type="text" data-unified-login-target="otp2" class="w-12 h-12 text-center border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg font-semibold" maxlength="1" inputmode="numeric">
            <input type="text" data-unified-login-target="otp3" class="w-12 h-12 text-center border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg font-semibold" maxlength="1" inputmode="numeric">
            <input type="text" data-unified-login-target="otp4" class="w-12 h-12 text-center border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg font-semibold" maxlength="1" inputmode="numeric">
            <input type="text" data-unified-login-target="otp5" class="w-12 h-12 text-center border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg font-semibold" maxlength="1" inputmode="numeric">
            <input type="text" data-unified-login-target="otp6" class="w-12 h-12 text-center border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg font-semibold" maxlength="1" inputmode="numeric">
          </div>
          
          <button data-action="click->unified-login#verifyOtp"
                  data-unified-login-target="verifyOtpBtn"
                  class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 text-white py-3 px-4 rounded-xl font-semibold hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-[1.02] active:scale-[0.98] shadow-lg">
            <span data-unified-login-target="verifyText"><%= t('auth.verify_otp') %></span>
            <span data-unified-login-target="verifyDisabledText" class="hidden"><%= t('auth.verifying') %></span>
          </button>
          
          <div class="text-center">
            <button data-action="click->unified-login#resendOtp"
                    data-unified-login-target="resendOtpBtn"
                    class="text-sm text-blue-600 hover:text-blue-500 font-medium transition-colors duration-200">
              <span data-unified-login-target="resendText"><%= t('auth.resend_otp') %></span>
              <span data-unified-login-target="resendTimer" class="hidden">
                <%= t('auth.resend_in') %> <span data-unified-login-target="timerCountdown">30</span>s
              </span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="text-center">
      <p class="text-sm text-gray-600">
        <%= t('common.dont_have_account') %>
        <%= link_to t('auth.create_new_account'), new_user_registration_path, class: "font-semibold text-blue-600 hover:text-blue-500 transition-colors duration-200" %>
      </p>
    </div>
  </div>
</div>
