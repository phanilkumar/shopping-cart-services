<div class="min-h-screen flex items-center justify-center bg-gray-50 py-2 px-4 sm:px-6 lg:px-8">
  <div class="max-w-sm w-full">
    <div>
      <div class="mx-auto h-6 w-6 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
        <svg class="h-4 w-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
      </div>
      <h2 class="mt-2 text-center text-lg font-bold text-gray-900">
        Create your account
      </h2>
      <p class="mt-1 text-center text-xs text-gray-600">
        Or
        <%= link_to "sign in to your account", new_user_session_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
      </p>
    </div>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-3" }) do |f| %>
      <% if resource.errors.any? %>
        <div class="mb-3 p-2 bg-red-50 border border-red-200 rounded-md">
          <div class="text-xs text-red-600">
            <ul class="list-disc list-inside space-y-1">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      
      <div class="space-y-2">
        <div class="grid grid-cols-2 gap-2">
          <div>
            <%= f.label :first_name, class: "block text-xs font-medium text-gray-700 mb-1" %>
            <%= f.text_field :first_name, autocomplete: "given-name", placeholder: "First name", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
          </div>
          <div>
            <%= f.label :last_name, class: "block text-xs font-medium text-gray-700 mb-1" %>
            <%= f.text_field :last_name, autocomplete: "family-name", placeholder: "Last name", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
          </div>
        </div>
        
        <div>
          <%= f.label :email, class: "block text-xs font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autocomplete: "email", placeholder: "Email address", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
        </div>
        
        <div>
          <%= f.label :phone, class: "block text-xs font-medium text-gray-700 mb-1" %>
          <%= f.telephone_field :phone, autocomplete: "tel", placeholder: "Phone number (10 digits)", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
        </div>
        
        <div>
          <%= f.label :password, class: "block text-xs font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
        </div>
        
        <div>
          <%= f.label :password_confirmation, class: "block text-xs font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
        </div>
      </div>

      <div class="mt-2">
        <%= f.submit "Sign up", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
    
    <div class="text-center mt-2">
      <p class="text-xs text-gray-600">
        By signing up, you agree to our
        <%= link_to "Terms", terms_path, class: "text-blue-600 hover:text-blue-500" %>
        and
        <%= link_to "Privacy", privacy_path, class: "text-blue-600 hover:text-blue-500" %>
      </p>
    </div>
  </div>
</div>
