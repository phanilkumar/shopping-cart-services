<% content_for :title, t('languages.title', default: 'Language Settings') %>

<div class="calm-language-container">
  <turbo-frame id="language-settings" class="calm-language-card animate-fade-in">
    <div class="calm-card">
      <div class="calm-card-header calm-text-center">
        <h1 class="calm-language-title">
          <span class="calm-language-icon">üåç</span>
          <%= t('languages.heading', default: 'Choose Your Language') %>
        </h1>
        <p class="calm-language-subtitle">
          <%= t('languages.subtitle', default: 'Select your preferred language for a personalized experience') %>
        </p>
      </div>
      
      <div class="calm-card-body">
        <div class="calm-language-grid">
          <% I18n.available_locales.each do |locale| %>
            <turbo-frame id="language-<%= locale %>" class="calm-language-option <%= 'active' if I18n.locale == locale %>">
              <%= link_to change_language_path(locale), 
                         method: :post,
                         class: "calm-language-link",
                         data: { 
                           turbo_method: :post,
                           turbo_action: "replace"
                         } do %>
                
                <div class="calm-language-flag">
                  <%= language_flag(locale) %>
                </div>
                
                <h3 class="calm-language-name">
                  <%= language_name(locale) %>
                </h3>
                
                <p class="calm-language-native">
                  <%= native_language_name(locale) %>
                </p>
                
                <% if I18n.locale == locale %>
                  <div class="calm-language-selected">
                    <span class="calm-check-icon">‚úì</span>
                    <%= t('languages.current', default: 'Current') %>
                  </div>
                <% else %>
                  <div class="calm-language-select">
                    <%= t('languages.select', default: 'Select') %>
                  </div>
                <% end %>
              <% end %>
            </turbo-frame>
          <% end %>
        </div>
        
        <!-- Language Info -->
        <div class="calm-language-info">
          <h2 class="calm-info-title">
            <%= t('languages.current_language', default: 'Current Language') %>
          </h2>
          <div class="calm-info-badge">
            <span class="calm-info-flag"><%= language_flag(I18n.locale) %></span>
            <span class="calm-info-text">
              <%= language_name(I18n.locale) %> (<%= I18n.locale.to_s.upcase %>)
            </span>
          </div>
          
          <p class="calm-info-note">
            <%= t('languages.note', default: 'Your language preference will be saved for future visits') %>
          </p>
        </div>
      </div>
      
      <div class="calm-card-footer calm-text-center">
        <%= link_to root_path, class: "calm-btn calm-btn-secondary", data: { turbo_action: "advance" } do %>
          <span class="calm-btn-icon">‚Üê</span>
          <%= t('languages.back_home', default: 'Back to Home') %>
        <% end %>
      </div>
    </div>
  </turbo-frame>
</div>

