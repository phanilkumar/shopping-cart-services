<div class="min-h-screen bg-gray-50 flex items-center justify-center p-4" 
     data-controller="login form-validation">
  <div class="w-full max-w-md">
    <!-- Header Section -->
    <div class="text-center mb-8">
      <div class="icon icon-xl bg-primary text-white rounded-full p-3 mx-auto mb-4">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-gray-900 mb-2">
        Welcome back
      </h2>
      <p class="text-gray-600">
        Sign in to your account to continue
      </p>
    </div>

    <!-- Main Form Card -->
    <div class="card">
      <div class="card-body">
        <%= form_with(scope: :user, 
                      url: user_session_path, 
                      method: :post, 
                      local: false,
                      data: { 
                        login_target: "form",
                        action: "submit->login#submit",
                        turbo: true
                      }) do |f| %>
          
          <!-- Flash Messages -->
          <div data-login-target="flashMessages">
            <% if flash[:alert] %>
              <div class="alert alert-error mb-4" data-login-target="errorMessage">
                <div class="flex items-center">
                  <span class="icon icon-sm text-danger mr-2">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </span>
                  <span class="text-sm font-medium">
                    <%= flash[:alert] %>
                  </span>
                </div>
              </div>
            <% end %>
            
            <% if flash[:notice] %>
              <div class="alert alert-success mb-4" data-login-target="successMessage">
                <div class="flex items-center">
                  <span class="icon icon-sm text-success mr-2">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </span>
                  <span class="text-sm font-medium">
                    <%= flash[:notice] %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Email/Phone Field -->
          <div class="form-group">
            <%= f.label :email, "Email or Phone Number", class: "form-label" %>
            <%= f.text_field :email, 
                autocomplete: "email", 
                placeholder: "Enter your email or phone number", 
                data: {
                  form_validation_target: "field",
                  action: "input->form-validation#validateField blur->form-validation#validateField",
                  field_type: "login_identifier"
                },
                class: "form-input" %>
            <div data-form-validation-target="error" class="form-error hidden"></div>
          </div>

          <!-- Password Field -->
          <div class="form-group">
            <%= f.label :password, "Password", class: "form-label" %>
            <div class="relative">
              <%= f.password_field :password, 
                  autocomplete: "current-password", 
                  placeholder: "Enter your password", 
                  data: {
                    form_validation_target: "field",
                    login_target: "passwordField",
                    action: "input->form-validation#validateField",
                    field_type: "password"
                  },
                  class: "form-input pr-12" %>
              
              <!-- Password Toggle Button -->
              <button type="button" 
                      data-login-target="passwordToggle"
                      data-action="click->login#togglePassword"
                      class="absolute right-3 top-1/2 transform -translate-y-1/2">
                <span class="icon icon-sm text-gray-400 hover:text-gray-600" data-login-target="eyeIcon">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                </span>
                <span class="icon icon-sm text-gray-400 hover:text-gray-600 hidden" data-login-target="eyeSlashIcon">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"></path>
                  </svg>
                </span>
              </button>
            </div>
            <div data-form-validation-target="error" class="form-error hidden"></div>
          </div>

          <!-- Remember Me & Forgot Password -->
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center">
              <%= f.check_box :remember_me, 
                  class: "mr-2" %>
              <%= f.label :remember_me, "Remember me", class: "text-sm text-gray-700" %>
            </div>

            <div class="text-sm">
              <%= link_to "Forgot password?", new_user_password_path, 
                  class: "text-primary hover:text-primary-dark" %>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="form-group mb-0">
            <%= f.submit "Sign in", 
                data: { login_target: "submitButton" },
                class: "btn btn-primary btn-block" %>
          </div>
        <% end %>

        <!-- Divider -->
        <div class="relative my-6">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-white text-gray-500">Or continue with</span>
          </div>
        </div>

        <!-- Alternative Login Methods -->
        <div class="space-y-3">
          <!-- OTP Login Button -->
          <button type="button" 
                  data-action="click->login#showOtpForm"
                  data-login-target="otpButton"
                  class="btn btn-secondary btn-block">
            <span class="icon icon-sm mr-2">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </span>
            Sign in with OTP
          </button>
        </div>
      </div>
    </div>

    <!-- Registration Link -->
    <div class="text-center mt-6">
      <p class="text-sm text-gray-600">
        Don't have an account?
        <%= link_to "Sign up here", register_path, class: "text-primary hover:text-primary-dark font-medium" %>
      </p>
    </div>

    <!-- Terms and Privacy -->
    <div class="text-center mt-4">
      <p class="text-xs text-gray-500">
        By signing in, you agree to our
        <%= link_to "Terms", terms_path, class: "text-primary hover:text-primary-dark" %>
        and
        <%= link_to "Privacy Policy", privacy_path, class: "text-primary hover:text-primary-dark" %>
      </p>
    </div>
  </div>
</div>

<!-- OTP Login Modal -->
<div data-login-target="otpModal" class="hidden modal-backdrop">
  <div class="modal">
    <div class="modal-header">
      <h3 class="text-lg font-semibold text-gray-900">Sign in with OTP</h3>
      <button type="button" 
              data-action="click->login#hideOtpForm"
              class="icon icon-sm text-gray-400 hover:text-gray-600">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <div class="modal-body">
      <!-- OTP Form -->
      <form data-login-target="otpForm" data-action="submit->login#submitOtp">
        <div class="space-y-4">
          <!-- Phone Number -->
          <div class="form-group">
            <label class="form-label">Phone Number</label>
            <input type="tel" 
                   data-login-target="otpPhone"
                   data-form-validation-target="field"
                   data-action="input->form-validation#validateField"
                   data-field-type="phone"
                   placeholder="Enter your phone number"
                   class="form-input"
                   pattern="[0-9]*"
                   inputmode="numeric"
                   maxlength="10">
            <div data-form-validation-target="error" class="form-error hidden"></div>
          </div>
          
          <!-- OTP Input -->
          <div data-login-target="otpInputContainer" class="hidden">
            <label class="form-label">OTP Code</label>
            <input type="text" 
                   data-login-target="otpCode"
                   placeholder="Enter 6-digit OTP"
                   class="form-input"
                   maxlength="6"
                   pattern="[0-9]*"
                   inputmode="numeric">
            <p class="text-xs text-gray-500 mt-2">Enter the 6-digit code sent to your phone</p>
          </div>
          
          <!-- Action Buttons -->
          <div class="flex gap-3">
            <button type="button" 
                    data-login-target="sendOtpButton"
                    data-action="click->login#sendOtp"
                    class="btn btn-primary flex-1">
              Send OTP
            </button>
            
            <button type="submit" 
                    data-login-target="verifyOtpButton"
                    data-action="submit->login#submitOtp"
                    class="btn btn-success flex-1 hidden">
              Verify OTP
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

