<% content_for :title, t('congratulations.title', default: 'Welcome!') %>

<div class="calm-celebration-container">
  <div class="calm-celebration-card animate-fade-in">
    <!-- Celebration Icon -->
    <div class="calm-celebration-icon">
      <div class="calm-confetti">
        <span class="confetti-piece">üéä</span>
        <span class="confetti-piece">‚ú®</span>
        <span class="confetti-piece">üéâ</span>
      </div>
      <div class="calm-success-circle">
        <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
      </div>
    </div>
    
    <!-- Success Message -->
    <h1 class="calm-celebration-title">
      <%= t('congratulations.heading', default: 'Congratulations!') %>
    </h1>
    
    <p class="calm-celebration-subtitle">
      <%= t('congratulations.message', default: 'Your account has been successfully created') %>
    </p>
    
    <!-- User Info Summary -->
    <div class="calm-success-info">
      <div class="calm-info-badge">
        <span class="calm-info-icon">‚úâÔ∏è</span>
        <span class="calm-info-text"><%= current_user.email %></span>
      </div>
      
      <% if current_user.phone.present? %>
        <div class="calm-info-badge">
          <span class="calm-info-icon">üì±</span>
          <span class="calm-info-text">+91 <%= current_user.phone %></span>
        </div>
      <% end %>
    </div>
    
    <!-- Next Steps -->
    <div class="calm-next-steps">
      <h2 class="calm-steps-title">
        <%= t('congratulations.next_steps', default: 'What would you like to do next?') %>
      </h2>
      
      <div class="calm-steps-grid">
        <%= link_to dashboard_path, 
                   class: "calm-step-card calm-step-primary",
                   data: { turbo_action: "advance" } do %>
          <span class="calm-step-icon">üè†</span>
          <h3 class="calm-step-title"><%= t('congratulations.go_to_dashboard', default: 'Go to Dashboard') %></h3>
          <p class="calm-step-description">
            <%= t('congratulations.dashboard_desc', default: 'View your profile and account settings') %>
          </p>
        <% end %>
        
        <%= link_to edit_user_registration_path, 
                   class: "calm-step-card",
                   data: { turbo_action: "advance" } do %>
          <span class="calm-step-icon">‚úèÔ∏è</span>
          <h3 class="calm-step-title"><%= t('congratulations.complete_profile', default: 'Complete Profile') %></h3>
          <p class="calm-step-description">
            <%= t('congratulations.profile_desc', default: 'Add more details to personalize your experience') %>
          </p>
        <% end %>
        
        <%= link_to root_path, 
                   class: "calm-step-card",
                   data: { turbo_action: "advance" } do %>
          <span class="calm-step-icon">üß≠</span>
          <h3 class="calm-step-title"><%= t('congratulations.explore', default: 'Explore Features') %></h3>
          <p class="calm-step-description">
            <%= t('congratulations.explore_desc', default: 'Discover what you can do with your account') %>
          </p>
        <% end %>
      </div>
    </div>
    
    <!-- Auto-redirect Notice -->
    <div class="calm-redirect-notice" data-controller="auto-redirect" data-auto-redirect-delay-value="10">
      <p class="calm-redirect-text">
        <%= t('congratulations.redirect_notice', default: 'You will be redirected to your dashboard in') %>
        <span data-auto-redirect-target="countdown">10</span>
        <%= t('congratulations.seconds', default: 'seconds') %>
      </p>
      <button class="calm-link" data-action="click->auto-redirect#cancel">
        <%= t('congratulations.stay_here', default: 'Stay on this page') %>
      </button>
    </div>
  </div>
</div>

<style>
  /* Celebration specific styles */
  .calm-celebration-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
    background: linear-gradient(135deg, #F8F9FA 0%, #E9ECEF 100%);
  }
  
  .calm-celebration-card {
    background: white;
    border-radius: 1rem;
    box-shadow: var(--calm-shadow-xl);
    width: 100%;
    max-width: 600px;
    padding: 3rem;
    text-align: center;
  }
  
  /* Celebration icon */
  .calm-celebration-icon {
    position: relative;
    margin-bottom: 2rem;
  }
  
  .calm-confetti {
    position: absolute;
    inset: -2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: none;
  }
  
  .confetti-piece {
    position: absolute;
    font-size: 2rem;
    animation: float 3s ease-in-out infinite;
  }
  
  .confetti-piece:nth-child(1) {
    top: 0;
    left: 20%;
    animation-delay: 0s;
  }
  
  .confetti-piece:nth-child(2) {
    top: 10%;
    right: 20%;
    animation-delay: 1s;
  }
  
  .confetti-piece:nth-child(3) {
    bottom: 20%;
    left: 30%;
    animation-delay: 2s;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-10px) rotate(180deg);
    }
  }
  
  .calm-success-circle {
    width: 120px;
    height: 120px;
    margin: 0 auto;
    background: var(--calm-gradient-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    animation: scaleIn 0.5s ease-out;
  }
  
  @keyframes scaleIn {
    from {
      transform: scale(0);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }
  
  .calm-celebration-title {
    font-family: var(--calm-font-serif);
    font-size: 2.5rem;
    color: var(--calm-gray-900);
    margin-bottom: 1rem;
  }
  
  .calm-celebration-subtitle {
    font-size: 1.125rem;
    color: var(--calm-gray-600);
    margin-bottom: 2rem;
  }
  
  /* Success info */
  .calm-success-info {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
  }
  
  .calm-info-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--calm-gray-50);
    border: 1px solid var(--calm-gray-200);
    border-radius: 2rem;
  }
  
  .calm-info-icon {
    font-size: 1.25rem;
  }
  
  .calm-info-text {
    font-weight: 500;
    color: var(--calm-gray-700);
  }
  
  /* Next steps */
  .calm-next-steps {
    margin-bottom: 2rem;
  }
  
  .calm-steps-title {
    font-family: var(--calm-font-serif);
    font-size: 1.25rem;
    color: var(--calm-gray-900);
    margin-bottom: 1.5rem;
  }
  
  .calm-steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }
  
  .calm-step-card {
    padding: 1.5rem;
    background: var(--calm-gray-50);
    border: 1px solid var(--calm-gray-200);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.75rem;
  }
  
  .calm-step-card:hover {
    background: white;
    border-color: var(--calm-primary);
    transform: translateY(-4px);
    box-shadow: var(--calm-shadow-md);
  }
  
  .calm-step-primary {
    background: var(--calm-primary);
    color: white;
    border-color: var(--calm-primary);
  }
  
  .calm-step-primary:hover {
    background: var(--calm-primary-dark);
    border-color: var(--calm-primary-dark);
  }
  
  .calm-step-primary .calm-step-title,
  .calm-step-primary .calm-step-description {
    color: white;
  }
  
  .calm-step-icon {
    font-size: 2rem;
  }
  
  .calm-step-title {
    font-weight: 600;
    color: var(--calm-gray-900);
    margin: 0;
  }
  
  .calm-step-description {
    font-size: 0.875rem;
    color: var(--calm-gray-600);
    margin: 0;
  }
  
  /* Redirect notice */
  .calm-redirect-notice {
    padding-top: 2rem;
    border-top: 1px solid var(--calm-gray-200);
  }
  
  .calm-redirect-text {
    color: var(--calm-gray-600);
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }
  
  .calm-redirect-text span {
    font-weight: 600;
    color: var(--calm-primary);
  }
  
  /* Mobile responsive */
  @media (max-width: 480px) {
    .calm-celebration-card {
      padding: 2rem 1.5rem;
    }
    
    .calm-celebration-title {
      font-size: 2rem;
    }
    
    .calm-success-circle {
      width: 100px;
      height: 100px;
    }
    
    .calm-steps-grid {
      grid-template-columns: 1fr;
    }
  }
</style>