<div class="min-h-screen bg-gray-50 flex items-center justify-center p-4" 
     data-controller="registration password-strength form-validation">
  <div class="w-full max-w-md">
    <!-- Header Section -->
    <div class="text-center mb-8">
      <div class="icon icon-xl bg-primary text-white rounded-full p-3 mx-auto mb-4">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-gray-900 mb-2">
        Create your account
      </h2>
      <p class="text-gray-600">
        Or
        <%= link_to "sign in to your account", login_path, class: "text-primary hover:text-primary-dark font-medium" %>
      </p>
    </div>
    
    <!-- Main Form Card -->
    <div class="card">
      <div class="card-body">
        <%= form_with(model: @user || User.new, 
                      url: register_path, 
                      method: :post, 
                      local: false,
                      data: { 
                        registration_target: "form",
                        action: "submit->registration#submit",
                        turbo: true
                      }) do |f| %>
          
          <!-- Flash Messages -->
          <div data-registration-target="flashMessages">
            <% if @user&.errors&.any? %>
              <div class="alert alert-error mb-4" data-registration-target="errorMessage">
                <div class="flex items-center">
                  <span class="icon icon-sm text-danger mr-2">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </span>
                  <div class="text-sm font-medium">
                    <ul class="list-disc list-inside space-y-1">
                      <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            <% end %>
            
            <% if flash[:alert] %>
              <div class="alert alert-error mb-4" data-registration-target="errorMessage">
                <div class="flex items-center">
                  <span class="icon icon-sm text-danger mr-2">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </span>
                  <span class="text-sm font-medium">
                    <%= flash[:alert] %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
          
          <div class="space-y-4">
            <!-- Name Fields -->
            <div class="grid grid-cols-2 gap-4">
              <div class="form-group">
                <%= f.label :first_name, "First Name *", class: "form-label" %>
                <%= f.text_field :first_name, 
                    autocomplete: "given-name", 
                    placeholder: "John", 
                    data: {
                      form_validation_target: "field",
                      action: "input->form-validation#validateField blur->form-validation#validateField",
                      field_type: "name"
                    },
                    class: "form-input" %>
                <p class="text-xs text-gray-500 mt-1">4-20 characters, letters only</p>
                <div data-form-validation-target="error" class="form-error hidden"></div>
              </div>
              <div class="form-group">
                <%= f.label :last_name, "Last Name *", class: "form-label" %>
                <%= f.text_field :last_name, 
                    autocomplete: "family-name", 
                    placeholder: "Doe", 
                    data: {
                      form_validation_target: "field",
                      action: "input->form-validation#validateField blur->form-validation#validateField",
                      field_type: "name"
                    },
                    class: "form-input" %>
                <p class="text-xs text-gray-500 mt-1">4-20 characters, letters only</p>
                <div data-form-validation-target="error" class="form-error hidden"></div>
              </div>
            </div>
            
            <!-- Email Field -->
            <div class="form-group">
              <%= f.label :email, "Email Address *", class: "form-label" %>
              <%= f.email_field :email, 
                  autocomplete: "email", 
                  placeholder: "john.doe@example.com", 
                  data: {
                    form_validation_target: "field",
                    action: "input->form-validation#validateField blur->form-validation#validateField",
                    field_type: "email"
                  },
                  class: "form-input",
                  maxlength: "50" %>
              <p class="text-xs text-gray-500 mt-1">Enter a valid email address</p>
              <div data-form-validation-target="error" class="form-error hidden"></div>
            </div>
            
            <!-- Phone Field -->
            <div class="form-group">
              <%= f.label :phone, "Mobile Number *", class: "form-label" %>
              <%= f.telephone_field :phone, 
                  autocomplete: "tel", 
                  placeholder: "9876543210", 
                  data: {
                    form_validation_target: "field",
                    action: "input->form-validation#validateField blur->form-validation#validateField",
                    field_type: "phone"
                  },
                  class: "form-input",
                  pattern: "[0-9]*",
                  inputmode: "numeric",
                  maxlength: "10" %>
              <p class="text-xs text-gray-500 mt-1">10-digit Indian mobile number</p>
              <div data-form-validation-target="error" class="form-error hidden"></div>
            </div>
            
            <!-- Password Field -->
            <div class="form-group">
              <%= f.label :password, "Password *", class: "form-label" %>
              
              <%= f.password_field :password, 
                  autocomplete: "new-password", 
                  placeholder: "Enter password", 
                  data: {
                    password_strength_target: "password",
                    form_validation_target: "field",
                    action: "input->password-strength#updatePasswordStrength input->form-validation#validateField",
                    field_type: "password"
                  },
                  class: "form-input",
                  maxlength: "16" %>
              
              <!-- Password Strength Progress Bar -->
              <div class="password-strength hidden" data-password-strength-target="strengthContainer">
                <div class="flex items-center justify-between mb-2">
                  <span class="text-xs text-gray-500 font-medium">Password strength:</span>
                  <span class="text-xs font-semibold text-gray-400" data-password-strength-target="strengthText">Very Weak</span>
                </div>
                <div class="strength-bar">
                  <div class="strength-fill" 
                       style="width: 0%; min-width: 0;" 
                       data-password-strength-target="progress"></div>
                </div>
              </div>
              
              <!-- Password Requirements -->
              <div class="password-requirements hidden mt-3 p-3 bg-gray-50 rounded" data-password-strength-target="requirementsContainer">
                <p class="text-xs font-semibold text-gray-700 mb-3">Password requirements:</p>
                <div class="space-y-2">
                  <div class="flex items-center space-x-3" data-password-strength-target="requirement" data-requirement="length">
                    <span class="requirement-icon">
                      <svg class="icon icon-sm text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"></path>
                      </svg>
                    </span>
                    <span class="requirement-text text-xs text-gray-400">8-16 characters long</span>
                  </div>
                  <div class="flex items-center space-x-3" data-password-strength-target="requirement" data-requirement="letter">
                    <span class="requirement-icon">
                      <svg class="icon icon-sm text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"></path>
                      </svg>
                    </span>
                    <span class="requirement-text text-xs text-gray-400">At least one letter (a-z, A-Z)</span>
                  </div>
                  <div class="flex items-center space-x-3" data-password-strength-target="requirement" data-requirement="number">
                    <span class="requirement-icon">
                      <svg class="icon icon-sm text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"></path>
                      </svg>
                    </span>
                    <span class="requirement-text text-xs text-gray-400">At least one number (0-9)</span>
                  </div>
                  <div class="flex items-center space-x-3" data-password-strength-target="requirement" data-requirement="special">
                    <span class="requirement-icon">
                      <svg class="icon icon-sm text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"></path>
                      </svg>
                    </span>
                    <span class="requirement-text text-xs text-gray-400">At least one special character</span>
                  </div>
                </div>
              </div>
              <div data-form-validation-target="error" class="form-error hidden"></div>
            </div>
            
            <!-- Password Confirmation Field -->
            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm Password *", class: "form-label" %>
              <%= f.password_field :password_confirmation, 
                  autocomplete: "new-password", 
                  placeholder: "Confirm your password", 
                  data: {
                    form_validation_target: "field",
                    action: "input->form-validation#validateField blur->form-validation#validateField",
                    field_type: "password_confirmation"
                  },
                  class: "form-input",
                  maxlength: "16" %>
              <p class="text-xs text-gray-500 mt-1">Must match your password</p>
              <div data-form-validation-target="error" class="form-error hidden"></div>
            </div>
          </div>

          <!-- Terms and Conditions -->
          <div class="form-group">
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <input id="terms" name="terms" type="checkbox" required
                       data-form-validation-target="field"
                       data-action="change->form-validation#validateField"
                       data-field-type="terms"
                       class="mr-2">
              </div>
              <div class="ml-3 text-sm">
                <label for="terms" class="text-gray-700">
                  I agree to the
                  <%= link_to "Terms of Service", terms_path, class: "text-primary hover:text-primary-dark underline" %>
                  and
                  <%= link_to "Privacy Policy", privacy_path, class: "text-primary hover:text-primary-dark underline" %>
                </label>
              </div>
            </div>
            <div data-form-validation-target="error" class="form-error hidden"></div>
          </div>

          <div class="form-group mb-0">
            <%= f.submit "Create Account", 
                data: { registration_target: "submitButton" },
                class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Registration Link -->
    <div class="text-center mt-6">
      <p class="text-sm text-gray-600">
        Already have an account?
        <%= link_to "Sign in here", login_path, class: "text-primary hover:text-primary-dark font-medium" %>
      </p>
    </div>
  </div>
</div>

<!-- Success Modal -->
<div data-registration-target="successModal" class="hidden modal-backdrop">
  <div class="modal">
    <div class="modal-body text-center">
      <div class="icon icon-xl bg-success text-white rounded-full p-3 mx-auto mb-4">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-900 mb-4">Registration Successful!</h3>
      <p class="text-gray-600 mb-6">
        Your account has been created successfully. You can now sign in to your account.
      </p>
      <button data-action="click->registration#goToLogin" 
              class="btn btn-primary">
        Go to Login
      </button>
    </div>
  </div>
</div>

