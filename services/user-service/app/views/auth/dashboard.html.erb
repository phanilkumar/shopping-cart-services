<div class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <!-- Welcome Header -->
    <div class="bg-white overflow-hidden shadow rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-12 w-12 rounded-full bg-blue-600 flex items-center justify-center">
              <span class="text-white font-bold text-lg">
                <%= @user.first_name&.first&.upcase || @user.email.first.upcase %>
              </span>
            </div>
          </div>
          <div class="ml-4">
            <h1 class="text-2xl font-bold text-gray-900">
              Welcome, <%= @user.first_name || @user.email %>!
            </h1>
            <p class="text-gray-600">Your account is active and ready to use.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- User Information -->
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          Your Information
        </h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">
          Personal details and account information.
        </p>
      </div>
      <div class="border-t border-gray-200">
        <dl>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Full Name</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= @user.full_name %>
            </dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Email Address</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= @user.email %>
            </dd>
          </div>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Phone Number</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= @user.phone %>
            </dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Account Status</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                Active
              </span>
            </dd>
          </div>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Member Since</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= @user.created_at.strftime("%B %d, %Y") %>
            </dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Last Login</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= @user.last_login_at ? @user.last_login_at.strftime("%B %d, %Y at %I:%M %p") : "Never" %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-6 flex space-x-3">
      <%= link_to "Back to Home", root_path, class: "px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white font-bold rounded" %>
      <%= link_to "Edit Profile", "#", class: "btn-primary" %>
      <%= link_to "Change Password", "#", class: "btn-secondary" %>
      <%= button_to "Logout", logout_path, method: :delete, 
          class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-bold rounded",
          data: { confirm: "Are you sure you want to logout?" } %>
    </div>
  </div>
</div>




