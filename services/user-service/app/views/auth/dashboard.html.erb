<% content_for :title, t('dashboard.title', default: 'Dashboard') %>

<div class="calm-dashboard" data-controller="dashboard">
  <!-- Welcome Section -->
  <turbo-frame id="welcome-section" class="calm-section">
    <div class="calm-welcome-card animate-fade-in">
      <div class="calm-welcome-content">
        <div class="calm-avatar-wrapper">
          <div class="calm-avatar calm-avatar-xl">
            <span><%= current_user.first_name&.first&.upcase || current_user.email.first.upcase %></span>
          </div>
        </div>
        
        <div class="calm-welcome-text">
          <h1 class="calm-welcome-title">
            <%= t('dashboard.welcome', default: 'Welcome back, %{name}!', name: current_user.first_name || current_user.email.split('@').first) %>
          </h1>
          <p class="calm-welcome-subtitle">
            <%= t('dashboard.subtitle', default: 'Your peaceful space is ready') %>
          </p>
          
          <div class="calm-status-badges">
            <span class="calm-badge calm-badge-success">
              <span class="calm-badge-icon">‚úì</span>
              <%= t('dashboard.verified', default: 'Account Verified') %>
            </span>
            <% if current_user.created_at > 7.days.ago %>
              <span class="calm-badge calm-badge-info">
                <span class="calm-badge-icon">üåü</span>
                <%= t('dashboard.new_member', default: 'New Member') %>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </turbo-frame>

  <!-- Quick Stats -->
  <turbo-frame id="quick-stats" class="calm-section">
    <div class="calm-stats-grid">
      <div class="calm-stat-card">
        <div class="calm-stat-icon calm-stat-icon-primary">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
        </div>
        <div class="calm-stat-content">
          <h3 class="calm-stat-value"><%= (Date.current - current_user.created_at.to_date).to_i %></h3>
          <p class="calm-stat-label"><%= t('dashboard.days_active', default: 'Days Active') %></p>
        </div>
      </div>
      
      <div class="calm-stat-card">
        <div class="calm-stat-icon calm-stat-icon-success">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </div>
        <div class="calm-stat-content">
          <h3 class="calm-stat-value"><%= current_user.sign_in_count %></h3>
          <p class="calm-stat-label"><%= t('dashboard.login_count', default: 'Total Logins') %></p>
        </div>
      </div>
      
      <div class="calm-stat-card">
        <div class="calm-stat-icon calm-stat-icon-info">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
        </div>
        <div class="calm-stat-content">
          <h3 class="calm-stat-value"><%= current_user.last_sign_in_at&.strftime('%H:%M') || '--:--' %></h3>
          <p class="calm-stat-label"><%= t('dashboard.last_login', default: 'Last Login') %></p>
        </div>
      </div>
    </div>
  </turbo-frame>

  <!-- Profile Information -->
  <turbo-frame id="profile-info" class="calm-section">
    <div class="calm-card">
      <div class="calm-card-header">
        <h2 class="calm-section-title">
          <span class="calm-section-icon">üë§</span>
          <%= t('dashboard.profile_info', default: 'Profile Information') %>
        </h2>
        <%= link_to t('dashboard.edit_profile', default: 'Edit'), 
                   edit_user_registration_path, 
                   class: "calm-btn calm-btn-sm",
                   data: { turbo_frame: "modal-content", turbo_action: "advance" } %>
      </div>
      
      <div class="calm-card-body">
        <div class="calm-info-grid">
          <div class="calm-info-item">
            <label class="calm-info-label"><%= t('dashboard.full_name', default: 'Full Name') %></label>
            <p class="calm-info-value"><%= current_user.full_name || '-' %></p>
          </div>
          
          <div class="calm-info-item">
            <label class="calm-info-label"><%= t('dashboard.email', default: 'Email Address') %></label>
            <p class="calm-info-value"><%= current_user.email %></p>
          </div>
          
          <div class="calm-info-item">
            <label class="calm-info-label"><%= t('dashboard.phone', default: 'Phone Number') %></label>
            <p class="calm-info-value"><%= current_user.phone ? "+91 #{current_user.phone}" : '-' %></p>
          </div>
          
          <div class="calm-info-item">
            <label class="calm-info-label"><%= t('dashboard.member_since', default: 'Member Since') %></label>
            <p class="calm-info-value"><%= current_user.created_at.strftime('%B %d, %Y') %></p>
          </div>
          
          <div class="calm-info-item">
            <label class="calm-info-label"><%= t('dashboard.language', default: 'Preferred Language') %></label>
            <p class="calm-info-value"><%= t("languages.#{I18n.locale}", default: I18n.locale.to_s.capitalize) %></p>
          </div>
          
          <div class="calm-info-item">
            <label class="calm-info-label"><%= t('dashboard.status', default: 'Account Status') %></label>
            <p class="calm-info-value">
              <span class="calm-badge calm-badge-success calm-badge-sm">
                <%= t('dashboard.active', default: 'Active') %>
              </span>
            </p>
          </div>
        </div>
      </div>
    </div>
  </turbo-frame>

  <!-- Recent Activity -->
  <turbo-frame id="recent-activity" class="calm-section">
    <div class="calm-card">
      <div class="calm-card-header">
        <h2 class="calm-section-title">
          <span class="calm-section-icon">üìä</span>
          <%= t('dashboard.recent_activity', default: 'Recent Activity') %>
        </h2>
      </div>
      
      <div class="calm-card-body">
        <div class="calm-timeline">
          <div class="calm-timeline-item">
            <div class="calm-timeline-marker calm-timeline-marker-success"></div>
            <div class="calm-timeline-content">
              <h4 class="calm-timeline-title"><%= t('dashboard.account_created', default: 'Account Created') %></h4>
              <p class="calm-timeline-time"><%= current_user.created_at.strftime('%B %d, %Y at %I:%M %p') %></p>
            </div>
          </div>
          
          <% if current_user.last_sign_in_at && current_user.last_sign_in_at != current_user.current_sign_in_at %>
            <div class="calm-timeline-item">
              <div class="calm-timeline-marker"></div>
              <div class="calm-timeline-content">
                <h4 class="calm-timeline-title"><%= t('dashboard.previous_login', default: 'Previous Login') %></h4>
                <p class="calm-timeline-time"><%= current_user.last_sign_in_at.strftime('%B %d, %Y at %I:%M %p') %></p>
              </div>
            </div>
          <% end %>
          
          <div class="calm-timeline-item">
            <div class="calm-timeline-marker calm-timeline-marker-primary"></div>
            <div class="calm-timeline-content">
              <h4 class="calm-timeline-title"><%= t('dashboard.current_session', default: 'Current Session Started') %></h4>
              <p class="calm-timeline-time"><%= current_user.current_sign_in_at&.strftime('%B %d, %Y at %I:%M %p') || 'Just now' %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </turbo-frame>

  <!-- Quick Actions -->
  <turbo-frame id="quick-actions" class="calm-section">
    <div class="calm-card">
      <div class="calm-card-header">
        <h2 class="calm-section-title">
          <span class="calm-section-icon">‚ö°</span>
          <%= t('dashboard.quick_actions', default: 'Quick Actions') %>
        </h2>
      </div>
      
      <div class="calm-card-body">
        <div class="calm-actions-grid">
          <%= link_to edit_user_registration_path, 
                     class: "calm-action-card",
                     data: { turbo_frame: "_top" } do %>
            <span class="calm-action-icon">‚úèÔ∏è</span>
            <span class="calm-action-text"><%= t('dashboard.update_profile', default: 'Update Profile') %></span>
          <% end %>
          
          <%= link_to edit_user_registration_path(anchor: 'password'), 
                     class: "calm-action-card",
                     data: { turbo_frame: "_top" } do %>
            <span class="calm-action-icon">üîê</span>
            <span class="calm-action-text"><%= t('dashboard.change_password', default: 'Change Password') %></span>
          <% end %>
          
          <%= link_to privacy_path, 
                     class: "calm-action-card",
                     target: "_blank" do %>
            <span class="calm-action-icon">üîí</span>
            <span class="calm-action-text"><%= t('dashboard.privacy_settings', default: 'Privacy Settings') %></span>
          <% end %>
          
          <%= link_to destroy_user_session_path, 
                     method: :delete,
                     class: "calm-action-card",
                     data: { turbo: false } do %>
            <span class="calm-action-icon">üö™</span>
            <span class="calm-action-text"><%= t('dashboard.logout', default: 'Logout') %></span>
          <% end %>
        </div>
      </div>
    </div>
  </turbo-frame>
</div>

<style>
  /* Dashboard specific styles */
  .calm-dashboard {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .calm-section {
    margin-bottom: 2rem;
  }
  
  /* Welcome card */
  .calm-welcome-card {
    background: var(--calm-gradient-primary);
    color: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: var(--calm-shadow-lg);
  }
  
  .calm-welcome-content {
    display: flex;
    align-items: center;
    gap: 2rem;
  }
  
  .calm-avatar-wrapper {
    flex-shrink: 0;
  }
  
  .calm-avatar {
    background: rgba(255, 255, 255, 0.2);
    border: 3px solid rgba(255, 255, 255, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 2rem;
  }
  
  .calm-avatar-xl {
    width: 5rem;
    height: 5rem;
    border-radius: 50%;
  }
  
  .calm-welcome-title {
    font-family: var(--calm-font-serif);
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }
  
  .calm-welcome-subtitle {
    opacity: 0.9;
    margin-bottom: 1rem;
  }
  
  .calm-status-badges {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .calm-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 500;
  }
  
  .calm-badge-success {
    background: rgba(255, 255, 255, 0.2);
    color: white;
  }
  
  .calm-badge-info {
    background: rgba(255, 255, 255, 0.15);
    color: white;
  }
  
  .calm-badge-sm {
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
  }
  
  /* Stats grid */
  .calm-stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  
  .calm-stat-card {
    background: white;
    border-radius: 0.75rem;
    padding: 1.5rem;
    box-shadow: var(--calm-shadow-sm);
    display: flex;
    align-items: center;
    gap: 1.5rem;
    transition: all 0.3s ease;
  }
  
  .calm-stat-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--calm-shadow-md);
  }
  
  .calm-stat-icon {
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .calm-stat-icon-primary {
    background: rgba(91, 143, 185, 0.1);
    color: var(--calm-primary);
  }
  
  .calm-stat-icon-success {
    background: rgba(92, 184, 92, 0.1);
    color: var(--calm-success);
  }
  
  .calm-stat-icon-info {
    background: rgba(91, 192, 222, 0.1);
    color: var(--calm-info);
  }
  
  .calm-stat-value {
    font-size: 2rem;
    font-weight: 600;
    color: var(--calm-gray-900);
    margin-bottom: 0.25rem;
  }
  
  .calm-stat-label {
    color: var(--calm-gray-600);
    font-size: 0.875rem;
  }
  
  /* Section title */
  .calm-section-title {
    font-family: var(--calm-font-serif);
    font-size: 1.25rem;
    color: var(--calm-gray-900);
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin: 0;
  }
  
  .calm-section-icon {
    font-size: 1.5rem;
  }
  
  /* Info grid */
  .calm-info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .calm-info-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .calm-info-label {
    font-size: 0.875rem;
    color: var(--calm-gray-600);
    font-weight: 500;
  }
  
  .calm-info-value {
    font-size: 1rem;
    color: var(--calm-gray-900);
  }
  
  /* Timeline */
  .calm-timeline {
    position: relative;
    padding-left: 2rem;
  }
  
  .calm-timeline::before {
    content: '';
    position: absolute;
    left: 0.5rem;
    top: 0.5rem;
    bottom: 0.5rem;
    width: 2px;
    background: var(--calm-gray-200);
  }
  
  .calm-timeline-item {
    position: relative;
    margin-bottom: 2rem;
  }
  
  .calm-timeline-item:last-child {
    margin-bottom: 0;
  }
  
  .calm-timeline-marker {
    position: absolute;
    left: -1.5rem;
    top: 0.25rem;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background: var(--calm-gray-400);
    border: 3px solid white;
  }
  
  .calm-timeline-marker-primary {
    background: var(--calm-primary);
  }
  
  .calm-timeline-marker-success {
    background: var(--calm-success);
  }
  
  .calm-timeline-title {
    font-weight: 600;
    color: var(--calm-gray-900);
    margin-bottom: 0.25rem;
  }
  
  .calm-timeline-time {
    font-size: 0.875rem;
    color: var(--calm-gray-600);
  }
  
  /* Actions grid */
  .calm-actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
  }
  
  .calm-action-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    padding: 1.5rem;
    background: var(--calm-gray-50);
    border: 1px solid var(--calm-gray-200);
    border-radius: 0.75rem;
    text-decoration: none;
    color: var(--calm-gray-700);
    transition: all 0.2s ease;
  }
  
  .calm-action-card:hover {
    background: var(--calm-primary-light);
    background: rgba(91, 143, 185, 0.1);
    border-color: var(--calm-primary);
    color: var(--calm-primary);
    transform: translateY(-2px);
  }
  
  .calm-action-icon {
    font-size: 2rem;
  }
  
  .calm-action-text {
    font-weight: 500;
    text-align: center;
  }
  
  /* Mobile responsive */
  @media (max-width: 768px) {
    .calm-dashboard {
      padding: 1rem 0.5rem;
    }
    
    .calm-welcome-content {
      flex-direction: column;
      text-align: center;
    }
    
    .calm-welcome-title {
      font-size: 1.5rem;
    }
    
    .calm-stats-grid {
      grid-template-columns: 1fr;
    }
    
    .calm-info-grid {
      grid-template-columns: 1fr;
    }
    
    .calm-actions-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>