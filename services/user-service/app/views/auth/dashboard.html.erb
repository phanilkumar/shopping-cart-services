<div class="min-h-screen bg-gray-50">
  <div class="container py-8">
    <div class="px-4">
      <!-- Welcome Header -->
      <div class="card mb-8">
        <div class="card-body">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="icon icon-xl bg-primary text-white rounded-full p-3">
                <span class="font-bold text-lg">
                  <%= @user.first_name&.first&.upcase || @user.email.first.upcase %>
                </span>
              </div>
            </div>
            <div class="ml-6">
              <h1 class="text-2xl font-bold text-gray-900 mb-2">
                Welcome back, <%= @user.first_name || @user.email %>!
              </h1>
              <p class="text-gray-600 mb-4">Your account is active and ready to use.</p>
              <div class="flex items-center">
                <div class="badge badge-success">
                  <span class="icon icon-sm mr-2">
                    <svg fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  </span>
                  Account Verified
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- User Information -->
      <div class="card">
        <div class="card-header">
          <div class="flex items-center">
            <div class="icon icon-lg bg-primary text-white rounded-lg p-2 mr-4">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">
                Your Information
              </h3>
              <p class="text-sm text-gray-600">
                Personal details and account information.
              </p>
            </div>
          </div>
        </div>
        <div class="card-body p-0">
          <dl>
            <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
              <dt class="text-sm font-semibold text-gray-700 mb-1">Full Name</dt>
              <dd class="text-sm text-gray-900 font-medium">
                <%= @user.full_name %>
              </dd>
            </div>
            <div class="bg-white px-6 py-4 border-b border-gray-200">
              <dt class="text-sm font-semibold text-gray-700 mb-1">Email Address</dt>
              <dd class="text-sm text-gray-900 font-medium">
                <%= @user.email %>
              </dd>
            </div>
            <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
              <dt class="text-sm font-semibold text-gray-700 mb-1">Phone Number</dt>
              <dd class="text-sm text-gray-900 font-medium">
                <%= @user.phone %>
              </dd>
            </div>
            <div class="bg-white px-6 py-4 border-b border-gray-200">
              <dt class="text-sm font-semibold text-gray-700 mb-1">Account Status</dt>
              <dd>
                <div class="badge badge-success">
                  <span class="icon icon-sm mr-2">
                    <svg fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  </span>
                  Active
                </div>
              </dd>
            </div>
            <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
              <dt class="text-sm font-semibold text-gray-700 mb-1">Member Since</dt>
              <dd class="text-sm text-gray-900 font-medium">
                <%= @user.created_at.strftime("%B %d, %Y") %>
              </dd>
            </div>
            <div class="bg-white px-6 py-4">
              <dt class="text-sm font-semibold text-gray-700 mb-1">Last Login</dt>
              <dd class="text-sm text-gray-900 font-medium">
                <%= @user.last_login_at ? @user.last_login_at.strftime("%B %d, %Y at %I:%M %p") : "Never" %>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="mt-8 flex flex-col sm:flex-row gap-4">
        <%= link_to root_path, class: "btn btn-secondary flex-1 sm:flex-none flex items-center justify-center" do %>
          <span class="icon icon-sm mr-2">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
          </span>
          Back to Home
        <% end %>
        
        <%= link_to "#", class: "btn btn-primary flex-1 sm:flex-none flex items-center justify-center" do %>
          <span class="icon icon-sm mr-2">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
          </span>
          Edit Profile
        <% end %>
        
        <%= link_to "#", class: "btn btn-success flex-1 sm:flex-none flex items-center justify-center" do %>
          <span class="icon icon-sm mr-2">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
            </svg>
          </span>
          Change Password
        <% end %>
        
        <%= button_to logout_path, method: :delete, 
            class: "btn btn-danger flex-1 sm:flex-none flex items-center justify-center",
            data: { confirm: "Are you sure you want to logout?" } do %>
          <span class="icon icon-sm mr-2">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
          </span>
          Logout
        <% end %>
      </div>
    </div>
  </div>
</div>

