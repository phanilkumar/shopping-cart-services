<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#5B8FB9">
    <meta name="apple-mobile-web-app-capable" content="yes">
    
    <title><%= content_for?(:title) ? yield(:title) : "User Service" %> - Peaceful Experience</title>
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Merriweather:wght@300;400&display=swap" rel="stylesheet">
    
    <!-- Stylesheets -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "peaceful_design", "data-turbo-track": "reload" %>
    
    <!-- JavaScript -->
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    
    <!-- Turbo configuration -->
    <meta name="turbo-cache-control" content="no-preview">
    <meta name="turbo-refresh-method" content="morph">
    <meta name="turbo-refresh-scroll" content="preserve">
  </head>

  <body class="calm-body">
    <!-- Navigation -->
    <nav class="calm-nav" data-turbo-permanent="main-nav" id="main-nav">
      <div class="calm-nav-container" data-controller="mobile-menu">
        <a href="<%= root_path %>" class="calm-nav-brand" data-turbo-action="advance">
          <span class="gradient-text">User Service</span>
        </a>
        
        <button class="calm-mobile-menu-toggle" 
                data-mobile-menu-target="toggleButton"
                data-action="click->mobile-menu#toggle"
                aria-label="Toggle navigation"
                aria-expanded="false">
          <span></span>
          <span></span>
          <span></span>
        </button>
        
        <div class="calm-nav-menu" data-mobile-menu-target="menu">
          <turbo-frame id="language-switcher" class="calm-nav-item">
            <%= render 'shared/language_switcher' %>
          </turbo-frame>
          
          <% if user_signed_in? %>
            <%= link_to dashboard_path, class: "calm-nav-link", data: { turbo_action: "advance" } do %>
              <span class="calm-nav-icon">üè†</span>
              <%= t('common.dashboard') %>
            <% end %>
            
            <%= button_to destroy_user_session_path, 
                         method: :delete, 
                         class: "calm-btn calm-btn-secondary calm-btn-sm",
                         form: { data: { turbo: false } } do %>
              <span class="calm-nav-icon">üö™</span>
              <%= t('common.logout') %>
            <% end %>
          <% else %>
            <%= link_to new_user_session_path, 
                       class: "calm-btn calm-btn-primary calm-btn-sm",
                       data: { turbo_action: "advance" } do %>
              <%= t('common.login') %>
            <% end %>
            
            <%= link_to new_user_registration_path, 
                       class: "calm-btn calm-btn-secondary calm-btn-sm",
                       data: { turbo_action: "advance" } do %>
              <%= t('common.register') %>
            <% end %>
          <% end %>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <turbo-frame id="flash-messages" class="calm-container">
      <% if notice.present? %>
        <div class="calm-alert calm-alert-success calm-mt-md animate-fade-in" data-turbo-temporary>
          <button type="button" class="calm-alert-close" aria-label="Close">√ó</button>
          <%= notice %>
        </div>
      <% end %>
      
      <% if alert.present? %>
        <div class="calm-alert calm-alert-danger calm-mt-md animate-fade-in" data-turbo-temporary>
          <button type="button" class="calm-alert-close" aria-label="Close">√ó</button>
          <%= alert %>
        </div>
      <% end %>
    </turbo-frame>

    <!-- Main Content -->
    <main class="calm-main" id="main-content">
      <div class="calm-container calm-p-lg">
        <%= yield %>
      </div>
    </main>

    <!-- Modal Container -->
    <div id="modal-container" class="modal-backdrop hidden" 
         data-controller="turbo-modal"
         data-action="keydown@window->turbo-modal#closeOnEscape click->turbo-modal#closeOnBackdrop"
         data-turbo-modal-target="backdrop">
      <div class="calm-modal" data-turbo-modal-target="modal">
        <turbo-frame id="modal-content" data-turbo-modal-target="content">
          <!-- Modal content loads here -->
        </turbo-frame>
      </div>
    </div>

    <!-- Footer -->
    <footer class="calm-footer">
      <div class="calm-container calm-text-center calm-p-md">
        <p class="calm-text-muted">
          &copy; <%= Date.current.year %> User Service. 
          <%= t('footer.tagline', default: 'Creating peaceful digital experiences.') %>
        </p>
      </div>
    </footer>

    <!-- Inline styles for immediate rendering -->
    <style>
      /* Body and layout */
      .calm-body {
        background: linear-gradient(180deg, #FAFBFC 0%, #F1F3F5 100%);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      
      .calm-main {
        flex: 1;
        padding: 2rem 0;
      }
      
      .calm-footer {
        background-color: white;
        border-top: 1px solid #E9ECEF;
        margin-top: auto;
      }
      
      .calm-text-muted {
        color: #6C757D;
        font-size: 0.875rem;
      }
      
      /* Modal styles */
      .modal-backdrop {
        position: fixed;
        inset: 0;
        background-color: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1040;
        opacity: 0;
        transition: opacity 0.3s ease-out;
      }
      
      .modal-backdrop.active {
        opacity: 1;
      }
      
      .calm-modal {
        background-color: white;
        border-radius: 0.75rem;
        box-shadow: 0 20px 25px rgba(0, 0, 0, 0.04), 0 10px 10px rgba(0, 0, 0, 0.04);
        max-width: 500px;
        width: 90%;
        max-height: 90vh;
        overflow-y: auto;
        transform: scale(0.9);
        transition: transform 0.3s ease-out;
      }
      
      .modal-backdrop.active .calm-modal {
        transform: scale(1);
      }
      
      /* Alert styles */
      .calm-alert {
        position: relative;
        padding-right: 3rem;
      }
      
      .calm-alert-close {
        position: absolute;
        top: 50%;
        right: 1rem;
        transform: translateY(-50%);
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        opacity: 0.5;
        transition: opacity 0.2s;
      }
      
      .calm-alert-close:hover {
        opacity: 1;
      }
      
      /* Gradient text */
      .gradient-text {
        background: linear-gradient(135deg, #5B8FB9 0%, #86A789 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 600;
      }
      
      /* Navigation icons */
      .calm-nav-icon {
        margin-right: 0.5rem;
        font-size: 1.1em;
      }
      
      /* Animations */
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(-10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      .animate-fade-in {
        animation: fadeIn 0.3s ease-out;
      }
      
      /* Mobile responsive */
      @media (max-width: 768px) {
        .calm-main {
          padding: 1rem 0;
        }
        
        .calm-nav-menu {
          gap: 1rem;
        }
        
        .calm-nav-menu.active {
          animation: slideDown 0.3s ease-out;
        }
        
        @keyframes slideDown {
          from {
            opacity: 0;
            transform: translateY(-10px);
          }
          to {
            opacity: 1;
            transform: translateY(0);
          }
        }
      }
    </style>

    <!-- Turbo configuration script -->
    <script>
      document.addEventListener("turbo:load", () => {
        // Auto-hide flash messages after 5 seconds
        document.querySelectorAll('[data-turbo-temporary]').forEach(element => {
          setTimeout(() => {
            element.style.transition = 'opacity 0.3s ease-out'
            element.style.opacity = '0'
            setTimeout(() => element.remove(), 300)
          }, 5000)
        })
        
        // Close alert on click
        document.querySelectorAll('.calm-alert-close').forEach(button => {
          button.addEventListener('click', () => {
            const alert = button.closest('.calm-alert')
            alert.style.transition = 'opacity 0.3s ease-out'
            alert.style.opacity = '0'
            setTimeout(() => alert.remove(), 300)
          })
        })
      })
      
      // Form submission handling
      document.addEventListener("turbo:submit-start", (event) => {
        const submitButton = event.target.querySelector('[type="submit"]')
        if (submitButton) {
          submitButton.disabled = true
          submitButton.dataset.originalText = submitButton.textContent
          submitButton.innerHTML = '<span class="calm-spinner"></span> Processing...'
        }
      })
      
      document.addEventListener("turbo:submit-end", (event) => {
        const submitButton = event.target.querySelector('[type="submit"]')
        if (submitButton && submitButton.dataset.originalText) {
          submitButton.disabled = false
          submitButton.textContent = submitButton.dataset.originalText
          delete submitButton.dataset.originalText
        }
      })
    </script>
  </body>
</html>